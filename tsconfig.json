{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/contexts/**/*.tsx",
    "next-env.d.ts",
    "eslint.config.js",
    "drizzle.config.ts",
    "next.config.js",
    "postcss.config.js",
    "prettier.config.js",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
